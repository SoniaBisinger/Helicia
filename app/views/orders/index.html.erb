<div class="container">
  <div class="row">

    <div class="image_p" style="background-image: url('Mettre image article')">
    <div class="d-flex justify-content-between">
        <div class="border border-white rounded-circle fs-6">
          <%=link_to "Back", stores_path %>
        </div>
    </div>
  </div>
  <div>
    <h1 class="my-3 fw-bolder fs-1">Orders list </h1>
  </div>

  <% @orders.each do |order| %>
    <div class="justify-content-between ">
      <p>Order number: </p>
      <p><%= link_to "#{order.number}", order_path(@order) %></p>
      <p>Order date: </p>
      <p><%= order.updated_at %></p>
    </div>
  <% end %>


</div>
